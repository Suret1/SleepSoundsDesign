<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DesignTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar_color</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/ebony_clay</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="ToolbarTitleText">
        <item name="android:fontFamily">@font/nunito_black</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabInlineLabel">true</item>
        <item name="tabIconTint">@color/white</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabBackground">@drawable/tab_bg</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="android:background">@color/mirage</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabMode">scrollable</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/nunito_black</item>
    </style>

    <style name="TextViewSemiBoldWhite">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewSemiBoldGrey">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/manatee</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/nunito_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">20dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">16dp</item>
        <item name="iconTint">@color/white</item>
    </style>

</resources>