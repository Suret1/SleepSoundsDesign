<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/category_item_bg">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iwCategoryItem"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:tint="@color/white"
            app:layout_constraintBottom_toTopOf="@id/tvCategoryItemName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_girl" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCategoryItemName"
            style="@style/TextViewSemiBoldWhite"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:background="@color/blue_grey_900"
            android:ellipsize="end"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Female voice" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>